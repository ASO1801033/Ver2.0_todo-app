<div class="container-fluid mt-3">
  <h4 id="notice"><span style="background-color: #F7DD65;"><%= notice %></span></h4>

  <h1>タスク一覧</h1>

  <table class="table table-striped mb-5">
    <thead>
      <tr>
        <th scope="col" class="text-dark">タイトル</th>
        <th scope="col" class="text-dark">内容</th>
        <th colspan="3" class="text-dark">操作</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td scope="row" class="align-middle"><%= post.title %></td>
          <td scope="row" class="align-middle"><%= post.content %></td>
          <td><%= link_to '詳細', post, class: "btn btn-raised btn-dark" %></td>
          <td><%= link_to '編集', edit_post_path(post), class: "btn btn-raised btn-info" %></td>
          <td><%= link_to '削除', post, class: "btn btn-raised btn-danger", method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to '新規作成', new_post_path, class: 'btn btn-raised btn-success' %>
</div>
